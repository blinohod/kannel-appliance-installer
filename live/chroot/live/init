# нам не нужен скринсейвер (на сервере от него, кстати, тоже ничего хорошего)
/usr/bin/setterm -blank 0
#echo
#read -p "Type 'yes' to run installer : " answer
#
#if [ $answer != "yes" ]; then
#  echo
#  echo "Reboot ..."
#  echo
#  reboot
#  exit 1
#fi

# простой логгер -- лог установки должен выводиться на tty2, и при этом еще и
# быть доступным после установки
/bin/mkfifo /tmp/logger
tee /tmp/install.log < /tmp/logger > /dev/tty2 &

/live/install 2> /tmp/logger

echo
echo "Reboot ..."
echo
reboot
