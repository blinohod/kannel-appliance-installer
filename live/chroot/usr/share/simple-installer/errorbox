#!/bin/sh
#===========================================================================#
#                   Выводим сообщение об ошибке                             #
#===========================================================================#
# (C) Denis Smirnov                                                May 2011 #
#===========================================================================#
echo > /tmp/logger
echo "#========================================" > /tmp/logger
echo "# Error: $@"                               > /tmp/logger
echo "#========================================" > /tmp/logger
dialog --backtitle "$TITLE" \
	--colors \
	--title "\Zb\Z1Critical error!" \
	--msgbox "$@" -1 -1
