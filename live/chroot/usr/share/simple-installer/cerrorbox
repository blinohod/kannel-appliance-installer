#!/bin/sh
#===========================================================================#
#          Выводим сообщение об ошибке, и завершаем установку               #
#===========================================================================#
# (C) Denis Smirnov                                                May 2011 #
#===========================================================================#
# это нужно, если у нас критическая ошибка, для которой у нас нет
# плана попытки восстановления
echo > /tmp/logger
echo "#========================================" > /tmp/logger
echo "# Critical error: $@"                      > /tmp/logger
echo "#========================================" > /tmp/logger
dialog --backtitle "$TITLE" \
	--colors \
	--title "\Zb\Z1Critical error!" \
	--msgbox "$@" -1 -1

reboot
